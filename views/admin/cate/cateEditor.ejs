<% include ../header %>
<div class="main-content">
	<div class="breadcrumbs" id="breadcrumbs">
		<script type="text/javascript">
			try{ace.settings.check('breadcrumbs' , 'fixed')}catch(e){}
		</script>

		<ul class="breadcrumb">
			<li>
				<i class="icon-home home-icon"></i>
				<a href="/admin">首页</a>
			</li>
			<li class="active">编辑分类</li>
		</ul><!-- .breadcrumb -->

		<div class="nav-search" id="nav-search">
			<form class="form-search">
				<span class="input-icon">
					<input type="text" placeholder="Search ..." class="nav-search-input" id="nav-search-input" autocomplete="off" />
					<i class="icon-search nav-search-icon"></i>
				</span>
			</form>
		</div><!-- #nav-search -->
	</div>

	<div class="step-content row-fluid position-relative" id="step-container">
		<div class="step-pane active" id="step1">
			<h3 class="lighter block green">分类编辑</h3>
			<% if(errMsg.length){ %> 
				<p class="alert alert-danger"><%= errMsg %></p>
			<% } %>
			<% if(succ.length){ %>
                    <p class="alert alert-info"><%= succ %></p>
            <%  } %>
			<form class="form-horizontal" action="/admin/catedoEditor" method="post">

				<div style="height:35px;" class="form-group">
					<label for="inputError2" class="col-xs-12 col-sm-3 control-label no-padding-right">分类名</label>
					<div class="col-xs-12 col-sm-5">
						<span class="input-icon block">
							<input type="text" id="inputError2" class="width-100" name="cateName" value="<%= cateData.cateName %>" />
							<input type="hidden" id="inputError2" class="width-100" name="_id" value="<%= cateData._id %>" />
						</span>
					</div>
				</div>
				<div style="height:35px;" class="form-group">
					<label for="inputError2" class="col-xs-12 col-sm-3 control-label no-padding-right">序号</label>
					<div class="col-xs-12 col-sm-5">
						<span class="input-icon block">
							<input type="number" id="inputError2" class="width-100" name="cate_top" value="<%= cateData.cate_top %>"/>
						</span>
					</div>
				</div>
				<div style="height:35px;" class="form-group">
					<label for="inputError2" class="col-xs-12 col-sm-3 control-label no-padding-right">分类状态</label>
					<div class="col-xs-12 col-sm-5">
						<span class="input-icon block">
							<input type="text" id="inputError2" class="width-100" name="cateName" disabled value="" />
						</span>
					</div>
				</div>
				<div class="form-group">
                    <div class="col-md-offset-6 col-md-4">
                        <a href="/admin/cateEdit" class="btn btn-success">返回</a>
                        <button class="btn btn-success">更新</button>
                    </div>
                </div>
			</form>
		</div>
	</div>
</div><!-- /.main-content -->
<% include ../footer %>
