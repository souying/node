<% include header %>
<div class="main-content">
	<div class="breadcrumbs" id="breadcrumbs">
		<script type="text/javascript">
			try{ace.settings.check('breadcrumbs' , 'fixed')}catch(e){}
		</script>

		<ul class="breadcrumb">
			<li>
				<i class="icon-home home-icon"></i>
				<a href="/admin">首页</a>
			</li>
			<li class="active">网站设置</li>
		</ul><!-- .breadcrumb -->

		<div class="nav-search" id="nav-search">
			<form class="form-search">
				<span class="input-icon">
					<input type="text" placeholder="Search ..." class="nav-search-input" id="nav-search-input" autocomplete="off" />
					<i class="icon-search nav-search-icon"></i>
				</span>
			</form>
		</div><!-- #nav-search -->
	</div>

	<div class="step-content row-fluid position-relative" id="step-container">
		<div class="step-pane active" id="step1">
			<h3 class="lighter block green">网站设置</h3>

			<form class="form-horizontal" action="/admin" method="post">
				<div style="height:35px;" class="form-group">
					<label for="inputError2" class="col-xs-12 col-sm-3 control-label no-padding-right">站点名称</label>
					<div class="col-xs-12 col-sm-5">
						<span class="input-icon block">
							<input type="text" id="inputError2" class="width-100" value="<%= adminData.webName %>" name="webName" />
						</span>
					</div>
				</div>

				<div style="height:35px;" class="form-group">
					<label for="inputError2" class="col-xs-12 col-sm-3 control-label no-padding-right">关键字</label>
					<div class="col-xs-12 col-sm-5">
						<span class="input-icon block">
							<input type="text" id="inputError2" class="width-100" value="<%= adminData.webKeywords %>" name="webKeywords"/>
						</span>
					</div>
				</div>
				<div style="height:35px;" class="form-group">
					<label for="inputError2" class="col-xs-12 col-sm-3 control-label no-padding-right">网站描述</label>
					<div class="col-xs-12 col-sm-5">
						<span class="input-icon block">
							<input type="text" id="inputError2" class="width-100" value="<%= adminData.webDescription %>" name="webDescription" />
						</span>
					</div>
				</div>
				<div style="height:35px;" class="form-group">
					<label for="inputError2" class="col-xs-12 col-sm-3 control-label no-padding-right">网站url</label>
					<div class="col-xs-12 col-sm-5">
						<span class="input-icon block">
							<input type="text" id="inputError2" class="width-100" value="<%= adminData.webUrl %>" name="webUrl"/>
						</span>
					</div>
				</div>
				<div style="height:35px;" class="form-group">
					<label for="inputError2" class="col-xs-12 col-sm-3 control-label no-padding-right">LOGOurl</label>
					<div class="col-xs-12 col-sm-5">
						<span class="input-icon block">
							<input type="text" id="inputError2" class="width-100" placeholder="加http:// 本地logo留空" name="logoUrl" value="<%= adminData.logoUrl %>"/>
						</span>
					</div>
				</div>
				<div style="height:35px;" class="form-group">
					<label for="inputError2" class="col-xs-12 col-sm-3 control-label no-padding-right">管理员邮箱</label>
					<div class="col-xs-12 col-sm-5">
						<span class="input-icon block">
							<input type="text" id="inputError2" class="width-100" name="email" value="<%= adminData.email %>"/>
						</span>
					</div>
				</div>
				<div style="height:35px;" class="form-group">
					<label for="inputError2" class="col-xs-12 col-sm-3 control-label no-padding-right">网站备案信息</label>
					<div class="col-xs-12 col-sm-5">
						<span class="input-icon block">
							<input type="text" id="inputError2" class="width-100" name="icp" value="<%= adminData.icp %>"/>
						</span>
					</div>
				</div>
				<div style="height:35px;" class="form-group">
				<label for="inputError2" class="col-xs-12 col-sm-3 control-label no-padding-right">站点状态</label>
					<label class="radio-inline col-md-offset-1">
					  <input type="radio" id="inlineRadio1" name="webActive" <%= adminData.webActive==1?'checked':'' %> value="1"> 开启
					</label>
					<label class="radio-inline col-md-offset-2">
					  <input type="radio" id="inlineRadio1" name="webActive" <%= adminData.webActive==0?'checked':'' %> value="0"> 关闭
					</label>
				</div>
				<div style="height:35px;" class="form-group">
					<label for="inputError2" class="col-xs-12 col-sm-3 control-label no-padding-right">关闭原因</label>
					<div class="col-xs-12 col-sm-5">
						<span class="input-icon block">
							<input type="text" id="inputError2" class="width-100" name="webActivedes" value="<%= adminData.webActivedes %>"/>
						</span>
					</div>
				</div>
				<div style="height:35px;" class="form-group">
					<label for="inputError2" class="col-xs-12 col-sm-3 control-label no-padding-right">密钥</label>
					<div class="col-xs-12 col-sm-5">
						<span class="input-icon block">
							<input type="text" id="inputError2" readonly class="width-100" value="qwert12345" name="key"/>
						</span>
					</div>
				</div>
				<div class="form-group">
                    <div class="col-md-offset-7 col-md-4">
                        <button class="btn btn-success">保存</button>
                    </div>
                </div>
			</form>
		</div>
	</div>
</div><!-- /.main-content -->
<% include footer %>
