<!-- 加载公共的头部  -->
<% include header %>

    <!-- 主体部分 -->
    <div id="main">
        <!-- 右侧的关于的描述 -->
        <div id="sidebar">
            <div class="panel">
                <div class="header">
                    <span class="col_fade">关于</span>
                </div>
                <div class="inner">
                    <p>CNode：<%= webData.webName %></p>

                    <p>友情链接要求：</p>
                    <ul>
                        <li>请先在贵网站做好<%= webData.webName %>的文字友情链接： 
                        链接文字：<%= webData.webName %>链接地址：<a href="<%= webData.webUrl %>"><%= webData.webUrl %></a>
                        </li>
                        <li>做好链接后，请在右侧填写申请信息。<%= webData.webName %>只接受申请文字友情链接。
                        </li>
                        <a href=""></a>
                        <li>已经开通我站友情链接且内容健康，符合本站友情链接要求的网站，经管理员审核后，可以显示在此友情链接页面。</li>
                        <li>请通过左侧提交申请，注明：友情链接申请。</li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- 左侧内容部分 -->
        <div id="content">
            <div class="panel">
                <div class="header">
                    <ul class="breadcrumb">
                        <li><a href="/">主页</a><span class="divider">/</span></li>
                        <li class="active">友情链接申请</li>
                    </ul>
                </div>

                <div class="inner">
                    <!-- 输出错误信息 -->
                    <% if(errMsg.length){ %>
                        <p class="alert alert-danger"><%= errMsg %></p>
                    <%  } %>
                    <% if(succ.length){ %>
                    <p class="alert alert-info"><%= succ %></p>
                    <%  } %>
                    <form id="signin_form" class="form-horizontal" action="/user/dokind" method="post">
                        <!-- 账户 -->
                        <div class="control-group">
                            <label class="control-label" for="name">网站名称</label>
                            <div class="controls">
                                <input required class="input-xlarge" id="name" name="webName" size="30" type="text">
                            </div>
                        </div>
                        <!-- 邮箱 -->
                        <div class="control-group">
                            <label class="control-label" for="name">联系邮箱</label>
                            <div class="controls">
                                <input required class="input-xlarge" id="name" name="email" size="30" type="email">
                            </div>
                        </div>
                       
                        <div class="control-group">
                            <label class="control-label" for="pass">网址</label>
                            <div class="controls">
                                <input required class="input-xlarge" id="pass" name="webUrl" size="30" type="text" value="http://">
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label" for="pass">LOGO链接</label>
                            <div class="controls">
                                <input required class="input-xlarge" id="pass" name="webpic" size="30" type="text" value="http://">
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label" for="signature">网站介绍</label>
                            <div class="controls">
                                <textarea class="input-xlarge" id="signature" name="webContent" size="30"></textarea>
                            </div>
                        </div>
                        <div class="form-actions">
                            <input class="span-primary" value="提交" type="submit">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- 底部 -->
    <% include footer %>